<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginRight="10dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/nomEtudiant"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="VAIDIE Steven"
        android:textSize="30sp" />
    
    <TextView
        android:id="@+id/promotion"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="INFO "
        android:textSize="25sp" />
    
    <TextView
        android:id="@+id/nombrePoint"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="2pt"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/intituleDernierDefiRealise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/nbPointDernierDefiRealise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
		android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/point_photo"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/logo_photo"
                android:gravity="center_vertical"
                android:text="2pt" />

            <TextView
                android:id="@+id/point_quizz"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/logo_quizz"
                android:gravity="center_vertical"
                android:text="2pt" />

        </LinearLayout>
  		
  		<LinearLayout
  		    android:layout_width="match_parent"
  		    android:layout_height="0dp"
  		    android:layout_marginLeft="10dp"
  		    android:layout_weight="2"
  		    android:orientation="horizontal" >

		    <TextView
		        android:id="@+id/point_geolocalisation"
		        android:layout_width="0px"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_weight="1"
		        android:drawableLeft="@drawable/logo_geolocalisation"
		        android:gravity="center_vertical" />
		    
		    <TextView
		        android:id="@+id/point_qr_code"
		        android:layout_width="0px"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_weight="1"
		        android:drawableLeft="@drawable/logo_qr_code"
		        android:gravity="center_vertical"
		        android:text="2pt" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bouton_parrainage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/bouton_application"
        android:text="@string/parrainage" />
</LinearLayout>